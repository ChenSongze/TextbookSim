    function typewriterStory(element, text, speed = 40) {
      return new Promise((resolve) => {
        // Clear any existing content and prevent further Enter key processing
        disableStoryKeyListener();
        element.textContent = '';
        element.classList.add('typing-active');
        
        let displayText = '';
        let i = 0;
        
        const timer = setInterval(() => {
          if (i < text.length) {
            displayText += text.charAt(i);
            element.textContent = displayText;
            i++;
          } else {
            clearInterval(timer);
            element.classList.remove('typing-active');
            resolve();
          }
        }, speed);
      });
    }

    function typewriterSummary(element, text, speed = 30) {
      return new Promise((resolve) => {
        // Clear any existing content
        element.textContent = '';
        element.classList.add('typing-active');
        
        let displayText = '';
        let i = 0;
        
        const timer = setInterval(() => {
          if (i < text.length) {
            displayText += text.charAt(i);
            element.textContent = displayText;
            i++;
          } else {
            clearInterval(timer);
            element.classList.remove('typing-active');
            resolve();
          }
        }, speed);
      });
    }

