            0%, 100% { transform: translate(-50%, -50%); }
            10% { transform: translate(-48%, -52%) rotate(1deg); }
            20% { transform: translate(-52%, -48%) rotate(-1deg); }
            30% { transform: translate(-49%, -51%) rotate(0.5deg); }
            40% { transform: translate(-51%, -49%) rotate(-0.5deg); }
